def concatenate_strings(*args):
    result = ""
    for i, arg in enumerate(args):
        if i > 0 and arg.startswith(","):
            result += arg
        elif i > 0:
            result += ", " + arg
        else:
            result += arg
    return result

# Example usage
str1 = "Hello"
str2 = "World"
str3 = "Python"
str4 = "is"
str5 = "awesome"

concatenated_string = concatenate_strings(str1, str2, ',', str3, str4, str5)
print(concatenated_string)
